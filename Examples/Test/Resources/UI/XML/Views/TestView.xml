<?xml version="1.0" encoding="utf-8"?>
<TestView Root="true">
  
  <Panel Name="TestPanel" Anchor="Stretch" Margin="200,200,50,50">
    
    <Button Name="First" Anchor="TopCenter" OffsetY="100">
      <Text Style="ButtonLabel" Label="true" Anchor="Stretch" Margin="20,120,0,2" />
      <Text Style="ButtonLabel" Label="true" Anchor="Stretch" Margin="120,20,0,2"/>
    </Button>

    <Button Style="Red" Name="Second" Anchor="TopCenter" OffsetY="180" OnClick="OnRedButtonClicked" >
      <Text Style="ButtonLabel" Label="true" />
    </Button>
    
    <Button Style="Blue" Name="Third" Anchor="TopCenter" OffsetY="260" />
    
    <Button Style="Close" Name="CloseButton" Anchor="TopRight" OffsetX="50" OffsetY="50" />

    <Text Style="Default" Name="Text" Width="400" Height="60" OffsetY="-100" Text="{TestString}" IgnoreInput="True" />
    
  </Panel>
    
</TestView>